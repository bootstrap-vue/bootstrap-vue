{
  "title": "Button group dropdown",
  "component": "bButtonGroupDropdown",
  "components": [
    "bDropdownItem",
    "bDropdownItemButton",
    "bDropdownHeader",
    "bDropdownDivider"
  ],
  "events": [
    {
      "event": "shown",
      "description": "When menu is shown"
    },
    {
      "event": "hidden",
      "description": "When menu is hidden"
    },
    {
      "event": "click",
      "description": "Only in split mode"
    }
  ],
  "slots": [
    {
      "name": "button-content",
      "description": "Can be used to implement custom text with icons and more styling in trigger button"
    }
    {
      "name": "text",
      "description": "Deprecated. use 'button-content' slot instead"
    }
  ]
}
